<html>
    <head>
          <link href="./css/styles.css" rel="stylesheet">
          <meta name="csrf-token" content="<%=csrfToken %>" />
          <script src="https://cdn.tailwindcss.com"></script> 
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.15/tailwind.min.css">
          <title>
            <%=title %>
          </title>  
        </head>
          <body>
            <div class="grid grid-cols-6">
              <div class="col-start-3 col-span-2">
               <%- include('header.ejs')%>
               <h6 class="py-8">
                 Signup as a new user
               </h6>
               <div>
                <% if(messages && messages.error && messages.error.length > 0)  { %>
                    <% for(var i=0; i<messages.error.length; i++) { %>
                            <li> <%= messages.error[i] %></li>
                    <% } %>
                  <% } %>
               </div>
               <form action="/users" method="post">
                <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                <div class="py-3">
                    <label for="firstName">Name</label>
                    <input type="text" name="firstName" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                    <label for="email">email</label>
                    <input type="email" name="email" class="border border-gray-300 text-gray-900 rounded p-2 w-full" required>
                </div>
                <div class="py-3">
                    <label for="password">password</label>
                    <input type="password" name="password" class="border border-gray-300 text-gray-900 rounded p-2 w-full" required>
                </div>
                <div class="py-3">
                    <label for="role">role</label>
                   
                    <input type="radio" name="role"  value="admin" >Admin</input>
                    <input type="radio" name="role"  value="player" >Player</input>

                </div>
                <div class="py-3">
                    <button type="submit" class="text-white bg-green-600 hover:bg-green-600 font-medium rounded px-5 py-2">Sign up</button>
                </div>
                
                
               </form>
              </div>
            </div>
          </body>
</html>