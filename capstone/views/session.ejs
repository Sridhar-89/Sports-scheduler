<html>
    <head>
          <link href="./css/styles.css" rel="stylesheet">
          <meta name="csrf-token" content="<%=csrfToken %>" />
          <script src="https://cdn.tailwindcss.com"></script> 
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.15/tailwind.min.css">
          
        </head>
          <body>
            <div class="grid grid-cols-6">
              <div class="col-start-3 col-span-2">
               <%- include('header.ejs')%>
               <h6 class="py-8">
                 New Cricket Session
               </h6>
               <div>
                <% if(messages && messages.error && messages.error.length > 0)  { %>
                    <% for(var i=0; i<messages.error.length; i++) { %>
                            <li> <%= messages.error[i] %></li>
                    <% } %>
                  <% } %>
               </div>
               <form action="/sport/<%=sport.id%>/session" method="post">
                <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                <div class="py-3">
                    <label for="date and time">When will this sport session be held?</label>
                    <input type="datetime-local" name="dateandtime" class="border border-gray-300 text-gray-900 rounded p-2 w-full" required>
                </div>
                <div class="py-3">
                    <label for="location">Where will this session be played ?</label>
                    <input type="text" name="location" class="border border-gray-300 text-gray-900 rounded p-2 w-full" required>
                </div>
                <div class="py-3">
                    <label for="players">Who all will be joining you in this session?(comma-separated)</label>
                    <input type="text" name="players" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                    <label for="no of players">How many more players do you need ?</label>
                   
                    <input type="number" name="noofplayers" class="border border-gray-300 text-gray-900 rounded p-2 w-full" required>
            

                </div>
                <div class="py-3">
                    <button type="submit" class="text-white bg-green-600 hover:bg-green-600 font-medium rounded px-5 py-2">submit</button>
                </div>
                
                
               </form>
              </div>
            </div>
          </body>
</html>